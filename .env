# ShardGuard Environment Configuration
# Copy this file to .env and fill in your actual values

# Google Gemini API Configuration
GEMINI_API_KEY=

# Ollama Configuration (optional - defaults shown)
OLLAMA_BASE_URL=http://localhost:11434

# Optional: Set default provider (ollama or gemini)
SHARDGUARD_DEFAULT_PROVIDER=ollama

# Optional: Set default models for each provider
# Gemini models: gemini-2.0-flash-exp, gemini-1.5-pro, gemini-1.5-flash
SHARDGUARD_GEMINI_MODEL=gemini-2.0-flash-exp

# Ollama models: llama3.2, llama3.1, codellama, mistral, etc.
SHARDGUARD_OLLAMA_MODEL=llama3.2
